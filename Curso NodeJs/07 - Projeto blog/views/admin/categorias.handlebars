<h2>Lista de Categorias</h2>
<br>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>


{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Data de criação: {{date}}</small><br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success btn-sm mt-2">Editar categoria</button></a>
            <form action="/admin/categorias/deletar/{{_id}}" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger btn-sm mt-2">Deletar categoria</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma categoria cadastrada!</h4>
{{/each}}