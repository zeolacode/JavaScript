{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Nova postagem</h4>
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Titulo:</label>
            <input type="text" name="titulo" class="form-control" required>
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" required>
            <label for="descricao">Descriçãp: </label>
            <input type="text" name="descricao" class="form-control" required>
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" class="form-control" required></textarea>
            <label for="categoria">Categoria: </label>
                <div class="input-group mt-1">
                <select class="custom-select" id="inputGroupSelect01">
                    {{#each categorias}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Nenhuma categoria registrada</option>
                    {{/each}}
                </select>
            </div>
            <button class="btn btn-success mt-2" type="submit">Criar postagem</button>
            <div class="input-group mb-3">
        </form>
    </div>
</div>